<%- partial('partials/_nav', {nav: 'nothing'})%>

<div class="container" style="max-width: 30rem;">
  <div class="card my-3">
    <label class="card-header bg-primary text-white">登入</label>
    <div class="card-body">
      <form onsubmit="event.preventDefault(); app.login(this.elements.namedItem('username').value, this.elements.namedItem('password').value);">
        <div class="form-group row">
          <label class="col-3 col-form-label">帳號：</label>
          <div class="col-9">
            <input type="text" id="username" class="form-control" placeholder="username" name="username">
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3 col-form-label">密碼：</label>
          <div class="col-9">
            <input type="password" id="password" class="form-control" placeholder="password" name="password">
          </div>
        </div>

        <div class="form-group">
          <input type="submit" class="btn-success form-control" value="登入">
        </div>
      </form>
    </div>
  </div>
</div>
