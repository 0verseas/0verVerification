<%- partial('partials/_nav', {navs: []})%>

<div class="container px-5">
  <form class="mx-auto mt-5" style="max-width: 23rem;" onsubmit="event.preventDefault(); app.login(this.elements.namedItem('username').value, this.elements.namedItem('password').value);">
    <div class="row">
      <h4>登入系統</h4>
      <div class="alert alert-danger show fade col-12" id="login-alert" role="alert" hidden>
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> 帳號或密碼錯誤
      </div>
    </div>

    <div class="form-group row">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
        </div>
        <input type="text" class="form-control" id="username" name="username" placeholder="帳號" aria-label="帳號" aria-describedby="basic-addon1" autocorrect="off" spellcheck="false" autocapitalize="off" required>
      </div>
    </div>

    <div class="form-group row">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
        </div>
        <input type="password" class="form-control" id="password" name="password" placeholder="密碼" aria-label="密碼" aria-describedby="basic-addon1" autocorrect="off" spellcheck="false" autocapitalize="off" required>
      </div>
    </div>

    <div class="form-group row">
      <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fa fa-shield fa-fw" aria-hidden="true"></i></span>
          </div>
          <input type="text" id="identifyingCode" class="form-control" placeholder="驗證碼，點擊圖片可更新。">
          <canvas  id="identifyingCanvas" width="120" height="40" ></canvas>
      </div>
  </div>

    <div class="form-group row">
      <button class="btn btn-success form-control" id="login-btn" type="submit" onmousedown="event.preventDefault()">登入</button>
    </div>
  </form>
</div>
